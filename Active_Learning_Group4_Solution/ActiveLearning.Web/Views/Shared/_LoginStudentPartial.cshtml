
@using Microsoft.AspNet.Identity
@using ActiveLearning.Web.Controllers
@using ActiveLearning.DB

@{


    using (Html.BeginForm("LogOff", "", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {

        var tempUser = TempData.Peek(BaseController.UserSessionParam) as User;

        @*@html.antiforgerytoken();*@
        <ul class="nav navbar-nav navbar-left"></ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + tempUser == null ? "" : tempUser.FullName, "", null, new { onclick = "javascript:return false;" })
            </li>
            <li>@Html.ActionLink("Home", "Index", "student")</li>
            <li>@Html.ActionLink("My Course", "CourseList", "student")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
        </ul>


    }

}










