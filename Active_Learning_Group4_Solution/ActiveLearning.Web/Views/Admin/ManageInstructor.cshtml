@model IEnumerable<ActiveLearning.DB.Instructor>

@{
    ViewBag.Title = "ManageInstructor";
}

<h2>Manage Instructor</h2>

<p>
    @Html.ActionLink("Create New Instructor", "CreateInstructor")
</p>
<table class="table">


    @if (Model == null)
    {
        <div>There is no record here.</div>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.Label("IsActivated")
            </th>


            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.IsActive)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditInstructor", new { id = item.Sid }) |
                    @Html.ActionLink("Details", "InstructorDetails", new { id = item.Sid }) |
                    @Html.ActionLink("Delete", "DeleteInstructor", new { id = item.Sid })
                </td>
            </tr>
        }
    }


</table>
